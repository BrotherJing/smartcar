<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Direction.DirectionActivity"
    tools:showIn="@layout/activity_direction">

    <TextView
        android:text="DirectionControl"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow >
            <Button
                android:id="@+id/left_forwarding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#1E88E5"
                android:gravity="center"
                android:text="左前" >
            </Button>

            <Button
                android:id="@+id/forwarding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#1E88E5"
                android:gravity="center"
                android:text="前进" >

            </Button>

            <Button
                android:id="@+id/right_forwarding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#1E88E5"
                android:gravity="center"
                android:text="右前" >
            </Button>

        </TableRow>
        <TableRow >
            <Button
                android:id="@+id/left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#1E88E5"
                android:gravity="center"
                android:text="左" >
            </Button>

            <Button
                android:id="@+id/stop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#1E88E5"
                android:gravity="center"
                android:text="停止" >
            </Button>

            <Button
                android:id="@+id/right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#1E88E5"
                android:gravity="center"
                android:text="右" >
            </Button>
        </TableRow>

        <TableRow >
            <Button
                android:id="@+id/left_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#1E88E5"
                android:gravity="center"
                android:text="左退" >
            </Button>

            <Button
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#1E88E5"
                android:gravity="center"
                android:text="后退" >
            </Button>

            <Button
                android:id="@+id/back_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#1E88E5"
                android:gravity="center"
                android:text="后退" >
            </Button>


        </TableRow>
    </TableLayout>

</LinearLayout>
